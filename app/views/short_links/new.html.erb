<% if @short_link.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@short_link.errors.count, "error") %>
      prohibited this link from being saved:
    </h2> 

    <ul>
    <% @short_link.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @short_link, local: true do |f| %>
  <%= f.text_field :original_url, placeholder: 'Paste a url' %>
  <%= f.submit 'Shorten' %>
<% end %>
</div>