<% if @short_link.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@short_link.errors.count, "error") %>
      prohibited this link from being saved:
    </h2>
    <ul>
      <% @short_link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class= 'card'>
  <div class='card-body'>
    <%= form_for @short_link, local: true do |f| %>
      <div class='form-group'>
        <%= f.text_field :original_url, class: 'form-control', placeholder: 'Paste a url' %>
        <%= f.submit 'Shorten' , class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
</div>
<div style='padding-top: 2rem;'>
  <%= link_to 'To Index', short_links_path , class: 'btn btn-primary' %>
</div>
